@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

set(PIKSEL_SHADER_DIR
    "${PACKAGE_PREFIX_DIR}/share/piksel/shaders"
)

# 1. Find the Public dependency
find_dependency(glfw3 CONFIG)

# 2. Find Private dependencies (Required because piksel is STATIC)
find_dependency(OpenGL)
find_dependency(glm CONFIG)
find_dependency(glad CONFIG)
find_dependency(imgui CONFIG)

# 3. Include the targets file
include("${CMAKE_CURRENT_LIST_DIR}/pikselTargets.cmake")

check_required_components(piksel)
